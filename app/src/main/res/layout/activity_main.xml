<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keypadTableLayout"
        app:layout_constraintVertical_weight="1" />

    <TableLayout
        android:id="@+id/keypadTableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:shrinkColumns="*"
        android:paddingTop="21dp"
        android:paddingBottom="21dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintVertical_weight="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <TableRow
            android:layout_weight ="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearButton"
                android:background="@drawable/button_background"
                android:text="C"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="clearButtonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="( )"
                android:textSize="24sp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:enabled="false"
                android:clickable="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="%"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/green"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="รท"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

        </TableRow>

        <TableRow
            android:layout_weight ="1">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="7"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="8"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="9"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="X"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/green"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

        </TableRow>

        <TableRow
            android:layout_weight ="1">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="4"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="5"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="6"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="-"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/green"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

        </TableRow>

        <TableRow
            android:layout_weight ="1">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="1"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="2"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="3"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="+"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/green"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

        </TableRow>

        <TableRow
            android:layout_weight ="1">

            <ImageButton
                android:id="@+id/historyButton"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_baseline_schedule_24"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="historyButtonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="0"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:onClick="buttonClicked"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="."
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/textColor"
                android:stateListAnimator="@null"
                android:enabled="false"
                android:clickable="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/button_background"
                android:text="="
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:textColor="@color/green"
                android:stateListAnimator="@null"
                android:onClick="resultButtonClicked"/>

        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>